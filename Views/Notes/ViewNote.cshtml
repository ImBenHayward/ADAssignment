@model Note

<div class="card card-margin">
    <div class="card-header">
        <h5>@Model.Title</h5>
        <h6 class="card-subtitle mb-2nm text-muted">@Model.Category Notes</h6>
    </div>
    <div class="card-body">
        <div class="card-text">@Model.NoteBody</div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</div>

<br/>
<div>
    <a asp-action="Category" asp-route-category="@Model.Category">Back to @Model.Category Notes</a>
</div>