@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><strong>Wessex Applications Ltd.</strong></h1>
</div>
<br/>
<div class="container">
    <div class="card-columns d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <img src="~/css/images/trello-logo.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Trello To-Do List</h5>
                <p class="card-text">Our To-Do List automatically syncs with Trello, making it easy to keep on top of tasks.</p>
                <a class="btn btn-primary" asp-controller="ToDoList" asp-action="Index">To Do-List</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="~/css/images/google-cloud.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">NoSQL Notebook</h5>
                <p class="card-text">Create, edit and update notes using the No SQL Notebook, hosted on Google's Datastore! </p>
                <a class="btn btn-primary" asp-controller="Notes" asp-action="Index">Notebook</a>
            </div>
        </div>
    </div>
</div>