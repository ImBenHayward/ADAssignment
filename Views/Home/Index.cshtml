@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Wessex Applications Ltd.</h1>
</div>

<div class="container">
    <div class="card-columns d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <img src="~/css/images/trello.jpeg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Trello To-Do List</h5>
                <p class="card-text">Our To-Do list automatically syncs with Trello, making it easy to keep on top of tasks.</p>
                <a class="btn btn-primary" asp-controller="ToDoList" asp-action="Index">To Do-List</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="~/css/images/trello.jpeg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
</div>